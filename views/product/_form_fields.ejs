<div class="form-group">
    <label for="_id">Title</label>
    <textarea name="_id"  id="_id" class="form-control"><%= product._id %></textarea>
    </div>

<div class="form-group">
<label for="description">Description</label>
<textarea name="description" placeholder="Description" id="description" class="form-control"><%= product.description %></textarea>
</div>

<div class="form-group">
<label for="restock">Restock Quantity and Date</label>
<textarea name="restock" placeholder="E.g. 27 Dec 2021 - 5pcs" id="restock" class="form-control"><%= product.restock %></textarea>
</div>

<div class="form-group">
<label for="quantityonhand">Quantity on Hand</label>
<textarea name="quantityonhand" id="quantityonhand" placeholder="E.g. 3 pcs" class="form-control"><%= product.quantityonhand %></textarea>
</div>

<div class="form-group">
<label for="sold">Sold</label>
<textarea name="sold" id="sold" placeholder="E.g. Laila Khalid: 3pcs
Jack Parrot: 4pcs" class="form-control"><%= product.sold %></textarea>
</div>

<div class="form-group">
<label for="payment">ACK</label>
<textarea name="payment" placeholder="E.g. Laila Khalid: BIBD 0968962 or Cash" id="payment" class="form-control"><%= product.payment %></textarea>
</div>

<div class="form-group">
<label for="remarks">Remarks</label>
<textarea name="remarks" id="remarks" class="form-control"><%= product.remarks %></textarea>
</div>

<div class="form-group">
<label for="valid">Valid</label>
<textarea name="valid" id="valid" class="form-control"><%= product.valid %></textarea>
</div>


<a href="/" class="btn btn-secondary">Cancel</a>

<button type="submit" onclick="createPDF()" id="button" class="btn btn-primary">Save</button>



