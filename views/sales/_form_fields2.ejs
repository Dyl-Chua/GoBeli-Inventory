<div class="form-group">
    <label for="title">Title</label>
    <textarea name="title"  id="title" class="form-control"><%= product.title %></textarea>
    </div>

<div class="form-group">
<label for="purchasedescription">Purchase Description</label>
<textarea name="purchasedescription" placeholder="Purchase Description" id="purchasedescription" class="form-control"><%= sales.purchasedescription %></textarea>
</div>

<div class="form-group">
<label for="product">Product</label>
<textarea name="product" placeholder="KF Mask" id="product" class="form-control"><%= sales.product %></textarea>
</div>

<div class="form-group">
<label for="quantity">Quantity</label>
<textarea name="quantity" id="quantity" placeholder="E.g. 3 pcs" class="form-control"><%= sales.quantity %></textarea>
</div>

<div class="form-group">
<label for="priceperunit">Price / Unit</label>
<textarea name="priceperunit" id="priceperunit" placeholder="E.g. $3" class="form-control"><%= sales.priceperunit %></textarea>
</div>

<div class="form-group">
<label for="payment">ACK</label>
<textarea name="payment" placeholder="E.g. Laila Khalid: BIBD 0968962 or Cash" id="payment" class="form-control"><%= product.payment %></textarea>
</div>

<div class="form-group">
<label for="remarks">Remarks</label>
<textarea name="remarks" id="remarks" class="form-control"><%= product.remarks %></textarea>
</div>


<a href="/" class="btn btn-secondary">Cancel</a>

<button type="submit" class="btn btn-primary">Save</button>